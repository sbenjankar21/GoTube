<p> <%= movie.title%></p>
<p> Ratings count: <%= movie.totalStars/5%></p>
<p> Stars: <%= movie.stars%> / <%= movie.totalStars%></p>
<p> Average rating: <%= movie.averageStars%> stars</p>
<p> Date posted <%= movie.datePosted%></p>
 <a href = "https://open.spotify.com/track/<%= movie.spotifyId%>" target="_blank">
    <div class = "item">
      <img class = "img" src="<%=movie.imageAddress%>" alt="Lamp" width="50">
      <p class = "vInfo" id = "overflo"> <%= movie.title%><br> <%= movie.director%></p>
    </div>
</a> 


<form action ="/movies/<%=movie.id%>/new-like" method="POST">

  <button type="submit">Like</button>
</form>

<br>
<% reviews.forEach(review => { %>
  <!-- <a href = "/reviews/<%=review.id%>"><div><%=review.title%></div></a> -->
  <!-- <a href = "<%= review.link%>" target="_blank"> -->
  <a href = "/reviews/<%=review.id%>" target="_blank">
      <div class = "item">
        <!-- <img class = "img" src="<%=review.movie.imageAddress%>" alt="Lamp" width="50"> -->
        <p class = "vInfo" id = "overflo"> <%= review.content%><br> <%= review.rating%> stars</p>
      </div>
  </a> 
<% }) %>