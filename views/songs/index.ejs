    <!-- <a href = "/videos/<%=song.id%>"><div><%=song.title%></div></a> -->
    <!-- <a href = "<%= song.link%>" target="_blank"> -->
    <a href = "/songs/<%=song.id%>" target="_blank">
        <div class = "song-item">
          <img class = "song-img" src="<%=song.imageAddress%>" alt="Lamp" width="200px">
          <p class = "vInfo" id = "overflo"> <span style ="font-size: 20px; "><%= song.title%></span><br> <span style="font-size: 12.5px; color:rgb(170, 170, 170)"><%= song.artist%></span></p>
        </div>
    </a> 
<% }) %>